// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// Enums
// ============================================================================

enum GroupRole {
  ADMIN
  MEMBER
}

enum RSVPStatus {
  GOING
  MAYBE
  CANT
}

// ============================================================================
// Models
// ============================================================================

model User {
  id        String   @id @default(cuid())
  phone     String   @unique
  name      String?
  avatar    String?
  createdAt DateTime @default(now())

  // Relations
  groupMemberships GroupMember[]
  sentMessages     Message[]     @relation("MessageSender")
  createdEvents    Event[]       @relation("EventCreator")
  rsvps            RSVP[]
  createdInvites   Invite[]      @relation("InviteCreator")

  @@index([phone])
}

model Group {
  id        String   @id @default(cuid())
  name      String
  emoji     String?
  createdAt DateTime @default(now())

  // Relations
  members  GroupMember[]
  messages Message[]
  events   Event[]
  invites  Invite[]

  @@index([createdAt])
}

model GroupMember {
  userId   String
  groupId  String
  role     GroupRole @default(MEMBER)
  joinedAt DateTime  @default(now())

  // Relations
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([userId, groupId])
  @@index([userId])
  @@index([groupId])
}

model Message {
  id        String   @id @default(cuid())
  groupId   String
  senderId  String
  content   String?
  imageUrl  String?
  createdAt DateTime @default(now())

  // Relations
  group  Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  sender User  @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([groupId])
  @@index([senderId])
  @@index([createdAt])
}

model Event {
  id          String   @id @default(cuid())
  groupId     String
  title       String
  description String?
  location    String?
  locationLat Float?
  locationLng Float?
  dateTime    DateTime
  createdBy   String
  createdAt   DateTime @default(now())

  // Relations
  group   Group  @relation(fields: [groupId], references: [id], onDelete: Cascade)
  creator User   @relation("EventCreator", fields: [createdBy], references: [id], onDelete: Cascade)
  rsvps   RSVP[]

  @@index([groupId])
  @@index([createdBy])
  @@index([dateTime])
}

model RSVP {
  id      String     @id @default(cuid())
  eventId String
  userId  String
  status  RSVPStatus

  // Relations
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
}

model Invite {
  id        String    @id @default(cuid())
  groupId   String
  code      String    @unique
  createdBy String
  expiresAt DateTime?
  maxUses   Int?
  useCount  Int       @default(0)
  createdAt DateTime  @default(now())

  // Relations
  group   Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  creator User  @relation("InviteCreator", fields: [createdBy], references: [id], onDelete: Cascade)

  @@index([code])
  @@index([groupId])
  @@index([createdBy])
}
