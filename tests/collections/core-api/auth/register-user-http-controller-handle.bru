meta {
  name: Register a new user with email/password
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/auth/register
  body: json
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

body:json {
  {
    "email": "qatesting+dev-{{$randomAbbreviation}}-{{$randomAdjective}}@thoughtandfunction.com",
    "password": "Testing123!",
    "displayName": "John Doe"
  }
}

assert {
  res.status: eq 201
}

script:post-response {
  const body = res.getBody()
  bru.setVar('email', body.email)
}
